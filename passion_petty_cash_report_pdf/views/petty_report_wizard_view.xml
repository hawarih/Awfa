<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_petty_report_wizard_form" model="ir.ui.view">
            <field name="name">petty.report.wizard.form</field>
            <field name="model">petty.report.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="employee_id"/>
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_print" string="Print Report" type="object" class="oe_highlight"/>
                        <button string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>