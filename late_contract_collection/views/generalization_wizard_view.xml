<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="generalization_wizard" model="ir.ui.view">
            <field name="name">Add Generalization</field>
            <field name="model">generalization.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="generalization_number"/>
                                <field name="follower"/>
                            </group>
                            <group name="group_right">
                                <field name="date"/>
                                <field name="location"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Add Generalization" name="add_generalization" class="oe_highlight" type="object"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>