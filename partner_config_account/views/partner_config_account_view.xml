<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="partner_config_account_form" model="ir.ui.view">
            <field name="name">partner.config.account.form</field>
            <field name="model">partner.config.account</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="type"/>
                            </group>
                            <group>
                                <field name="property_account_payable_id"/>
                                <field name="property_account_receivable_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="partner_config_account_tree" model="ir.ui.view">
            <field name="name">partner.config.account.tree</field>
            <field name="model">partner.config.account</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>