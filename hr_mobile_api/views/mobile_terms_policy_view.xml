<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_mobile_terms_policy_form" model="ir.ui.view">
            <field name="name">mobile.terms.policy.form</field>
            <field name="model">mobile.terms.policy</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <notebook>
                            <page name="terms_conditions" string="Terms and Conditions">
                                <field name="terms_conditions"/>
                            </page>
                            <page name="privacy_policy" string="Privacy Policy">
                                <field name="privacy_policy"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_mobile_terms_policy_tree" model="ir.ui.view">
            <field name="name">mobile.terms.policy.tree</field>
            <field name="model">mobile.terms.policy</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>