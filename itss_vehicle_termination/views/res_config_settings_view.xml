<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_sale_inherited" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.sale.inherited</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('app_settings_block')][@data-key='sale_management']" position="inside">
                    <h2>Vehicle Termination</h2>
                    <div class="row mt16 o_settings_container" name="vehicle_termination_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="vehicle_termination_setting">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="text-muted content-group mt16">
                                    <span>Termination Account</span>
                                    <field name="termination_account_id" class="text-center oe_inline"/>
                                </div>
                                <div class="text-muted content-group mt16">
                                    <span>Termination Journal</span>
                                    <field name="termination_journal_id" class="text-center oe_inline"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>