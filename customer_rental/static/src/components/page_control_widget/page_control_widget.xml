<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="pageControlWidget" owl="1">
        <div class="o_widget o_widget_page_control_widget">
            <div class="row">
                <div class="col-4"></div>
                <div class="col-2">
                    <button type="button" class="btn btn-primary" data-tooltip="Previous" aria-label="Previous" 
                                t-att-class="state.page_number === 1 ? 'd-none' : ''" t-on-click="clickPrevious" data-bounce-button="" title=""> Previous </button>
                </div>
                <div class="col-2">
                    <button type="button" class="btn btn-primary" data-tooltip="Next" aria-label="Next" 
                                t-att-class="state.page_number === totalTabs ? 'd-none' : ''" t-on-click="clickNext" data-bounce-button="" title=""> Next </button>
                </div>
                <div class="col-4"></div>
            </div>
        </div>
    </t>
</templates>
