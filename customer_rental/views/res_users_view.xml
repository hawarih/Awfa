<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_users_customer_rental_inherit" model="ir.ui.view">
            <field name="name">res_users_customer_rental_inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='preferences']" position="inside">
                    <group name="rental" string="Rental">
                        <field name="allow_multi_contract"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>