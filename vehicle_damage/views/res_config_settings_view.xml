<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="accident_damage_setting_view_form" model="ir.ui.view">
            <field name="name">accident.damage.settings.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="vehicle_accident.accident_res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='vehicle_accident_setting']" position="after">
                    <div class="app_settings_block" data-string="Accident Damage" id="accident_damage" string="Accident Damage" data-key="vehicle_accident">
                        <h2>Accident Damage</h2>
                        <div class="row mt16 o_settings_container" id="vehicle_accident_setting">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="text-muted content-group mt16">
                                        <span>Accident Damage Product</span>
                                        <field name="damage_product" class="text-center oe_inline" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>