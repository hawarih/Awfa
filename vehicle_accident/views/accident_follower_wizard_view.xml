<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="accident_follower_wizard_form" model="ir.ui.view">
            <field name="name">accident_follower.wizard.form</field>
            <field name="model">accident.follower.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="follower_id"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Confirm" name="action_confirm" class="oe_highlight" type="object"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>