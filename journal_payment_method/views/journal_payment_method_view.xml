<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="journal_payment_method_form" model="ir.ui.view">
            <field name="name">journal.payment.method.form</field>
            <field name="model">journal.payment.method</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="journal_payment_method_tree" model="ir.ui.view">
            <field name="name">journal.payment.method.tree</field>
            <field name="model">journal.payment.method</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>